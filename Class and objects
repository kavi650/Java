Class and objects 



import java.util.*;

class Student {
    int rollno;
    String name;

    // Constructor to initialize rollno and name
    Student(int r, String n) {
        rollno = r;
        name = n;
    }

    void display() {
        System.out.println("Roll No: " + rollno);
        System.out.println("Name: " + name);
    }
}

public class Main {
    public static void main(String[] args) {
        // Passing values through the constructor
        Student s = new Student(29, "Kavi");
        s.display();
    }
}
